@model AddProductViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-4">
            <h2>Create New Product</h2>
            <div>
                <label class="form-label" asp-for=@Model.ProductName></label>
                <input type="text" asp-for="@Model.ProductName" class="form-control" />
                <span asp-validation-for="@Model.ProductName"></span>
            </div>
            <div>
                <label class="form-label" asp-for="@Model.Price"></label>
                <input type="text" asp-for="@Model.Price" class="form-control" />
                <span asp-validation-for="@Model.Price"></span>
            </div>
            <div>
                <label class="form-label" asp-for="@Model.Quantity"></label>
                <input type="text" asp-for="@Model.Quantity" class="form-control" />
                <span asp-validation-for="@Model.Quantity"></span>
            </div>
            <div>
                <label class="form-label" for="selectCategoryId">Category Name</label>
                <select asp-for="@Model.CategoryId" class="form-select" asp-items="@Model.Categories">
                    <option disabled selected>--Select--</option>
                </select>
            </div>
            <input type="submit" value="Submit" class="mt-3" />
        </div>
    </div>
</form>
<div class="mt-4">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}