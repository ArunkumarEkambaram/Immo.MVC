@model IEnumerable<Product>

<div class="container">
    <div class="row">
        <div class="col-6"><h2>List of Products</h2></div>
        <div class="col-6">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary">Create Product</a>
        </div>
    </div>

    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.ProductName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@product.Id">Details</a> |
                            <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>