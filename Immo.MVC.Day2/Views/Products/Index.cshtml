@model IEnumerable<ProductWithCategory>

<div class="container">
    <div class="row">
        <div class="col-4"><h2>List of Products</h2></div>
        <div class="col-4">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary">Create Product</a>
        </div>
    </div>
    <form asp-action="Index" method="get">
        <div class="row g-3 align-items-center m-3">
            <div class="col-auto">
                <label for="productName" class="col-form-label">Search: </label>
            </div>
            <div class="col-auto">
                <input type="text" name="productName" id="productName" value="@ViewBag.SearchString" class="form-control" />
            </div>
            <div class="col-auto">
                <button type="submit" id="btnSearch" name="btnSearch" class="btn btn-outline-primary">Search</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.ProductName</td>
                            <td>@product.CategoryName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@product.Id">Details</a> |
                                <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>